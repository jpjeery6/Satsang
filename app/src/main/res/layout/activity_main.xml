<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".Actvities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:background="@color/colorBack"
        >



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/satsang"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:layout_weight="3"
        >




        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >



            <android.support.v7.widget.CardView
                android:layout_width="250dp"
                android:layout_margin="10dp"
                android:id="@+id/District"
                android:layout_centerHorizontal="true"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    >
                <TextView
                    android:id="@+id/district_name_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your current District"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:paddingLeft="2dp"
                    android:paddingTop="2dp"

                    />
                <TextView

                    android:id="@+id/location_address_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="District Name"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="250dp"
                android:layout_margin="10dp"
                android:id="@+id/State"
                android:layout_below="@+id/District"
                android:layout_centerHorizontal="true"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    >
                <TextView
                    android:id="@+id/location_state_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your State/Country Name"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:paddingLeft="2dp"
                    android:paddingTop="2dp"

                    />

                <TextView
                    android:id="@+id/location_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="State Name"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="250dp"
                android:layout_margin="10dp"
                android:id="@+id/ptime"
                android:layout_below="@+id/State"
                android:layout_centerHorizontal="true"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    >
                <TextView
                    android:id="@+id/Praying_time_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Praying Time"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:paddingLeft="2dp"
                    android:paddingTop="2dp"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/prayer_time_view"
                    android:text="Praying Time"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    />
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"

                android:layout_below="@+id/ptime"
                android:layout_centerHorizontal="true"
                android:layout_height="40dp">
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/alarm_debug_info_curr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alarm Not set"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"


                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/alarm_debug_info_15"
                        android:text="ALarm not set"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:paddingLeft="20dp"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>




        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/colorBack"
            android:layout_weight="9"
            >
            <Switch
                android:text="Disable Alarms  "
                android:id="@+id/simpleSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />


        </RelativeLayout>


    </LinearLayout>




</LinearLayout>

